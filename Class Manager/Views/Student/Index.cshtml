@model List<Class_Manager.ViewModels.StudentViewModel>
@{
    ViewBag.Title = "Students";
}

<h2>Index</h2>
<table class="table">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Name </th>
            <th>Grade </th>
            <th>Courses</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Grade</td>
                <td>
                    @foreach (var course in item.Courses)
                    {
                        <span>@Html.ActionLink(course.CourseName, "Details", "Course", new { id = course.CourseId }, null) | </span>
                    }
                </td>
                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, new { @style = "color: white;text-decoration:none;" })
                    </button>
                    <button class="btn btn-warning">
                        @Html.ActionLink("Details", "Details", new { id = item.StudentId }, new { @style = "color: white;text-decoration:none;" })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { @style = "color: white;text-decoration:none;" })
                    </button>
                </td>
            </tr>
        }
    </thead>
</table>
<p>
    @Html.ActionLink("Add New Student", "Create")
</p>